<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <schema id="org.wayfire.plugin.input" path="/org/wayfire/plugin/input/">
    <key name="tap-to-click" type="b">
      <default>true</default>
      <summary>Tap to Click</summary>
    </key>
    <key name="disable-while-typing" type="b">
      <default>false</default>
      <summary>Disable while Typing</summary>
    </key>
    <key name="disable-touchpad-while-mouse" type="b">
      <default>false</default>
      <summary>Disable Touchpad while using Mouse</summary>
    </key>
    <key name="natural-scroll" type="b">
      <default>false</default>
      <summary>Natural Scroll</summary>
    </key>
    <key name="xkb-model" type="s">
      <default>''</default>
      <summary>XKB Model</summary>
    </key>
    <key name="xkb-variant" type="s">
      <default>''</default>
      <summary>XKB Variant</summary>
    </key>
    <key name="xkb-layout" type="s">
      <default>'us'</default>
      <summary>XKB Layout</summary>
    </key>
    <key name="xkb-option" type="s">
      <default>''</default>
      <summary>XKB Option</summary>
    </key>
    <key name="xkb-rule" type="s">
      <default>'evdev'</default>
      <summary>XKB Rule</summary>
    </key>
    <key name="kb-repeat-rate" type="i">
      <default>40</default>
      <summary>Key Repeat Rate</summary>
    </key>
    <key name="kb-repeat-delay" type="i">
      <default>400</default>
      <summary>Key Repeat Delay</summary>
    </key>
    <key name="cursor-theme" type="s">
      <default>'default'</default>
      <summary>Cursor Theme</summary>
    </key>
    <key name="cursor-size" type="i">
      <default>24</default>
      <summary>Cursor Size</summary>
    </key>
    <key name="mouse-cursor-speed" type="d">
      <default>0</default>
      <summary>Mouse Cursor Speed</summary>
      <range min="-1" max="1"/>
    </key>
    <key name="touchpad-cursor-speed" type="d">
      <default>0</default>
      <summary>Touchpad Cursor Speed</summary>
      <range min="-1" max="1"/>
    </key>
    <key name="mouse-scroll-speed" type="d">
      <default>1</default>
      <summary>Mouse Scroll Speed</summary>
      <range min="0"/>
    </key>
    <key name="touchpad-scroll-speed" type="d">
      <default>1</default>
      <summary>Touchpad Scroll Speed</summary>
      <range min="0"/>
    </key>
    <key name="click-method" type="s">
      <default>'default'</default>
      <summary>Click Method</summary>
    </key>
    <key name="scroll-method" type="s">
      <default>'default'</default>
      <summary>Scroll Method</summary>
    </key>
  </schema>
</schemalist>
